{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowListBucket",
      "Effect": "Allow",
      "Principal": "<service_account_id>",
      "Action": ["s3:ListBucket"],
      "Resource": "arn:aws:s3:::<bucket_name>"
    },
    {
      "Sid": "AllowObjectRW",
      "Effect": "Allow",
      "Principal": "<service_account_id>",
      "Action": ["s3:GetObject", "s3:PutObject", "s3:DeleteObject"],
      "Resource": "arn:aws:s3:::<bucket_name>/*"
    }
  ]
}
